#include <stdio.h>

int main() {
    int N;
    printf("Введите N (1 <= N <= 15): ");
    scanf("%d", &N);

    if (N < 1 || N > 15) {
        printf("Ошибка: N должно быть от 1 до 15.\n");
        return 1;
    }

    int A[15];
    printf("Введите %d целых чисел:\n", N);
    for (int i = 0; i < N; i++) {
        scanf("%d", &A[i]);
    }

    int B[15];          // максимум (15+1)/2 = 8 элементов, но выделим 15 для простоты
    int sizeB = 0;
    for (int i = 0; i < N; i += 2) {
        B[sizeB] = A[i];
        sizeB++;
    }

    // Вывод результата
    printf("Размер массива B: %d\n", sizeB);
    printf("Массив B: ");
    for (int i = 0; i < sizeB; i++) {
        printf("%d ", B[i]);
    }
    printf("\n");

    return 0;
}
