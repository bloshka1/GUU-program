#include <stdio.h>

int main() {
    int N;
    printf("Введите N (> 0): ");
    scanf("%d", &N);

    if (N <= 0) {
        printf("Ошибка: N должно быть положительным.\n");
        return 1;
    }

    double A_prev = 2.0;  // A0
    double A_curr;

    printf("Элементы последовательности:\n");
    for (int K = 1; K <= N; K++) {
        A_curr = 2.0 + 1.0 / A_prev;
        printf("A%d = %.6g\n", K, A_curr);
        A_prev = A_curr;  // обновляем предыдущее значение
    }

    return 0;
}
